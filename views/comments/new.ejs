<% include ../partials/header %>

<div class="container">
  <h1 class="text-center">Add New Comment</h1>

  <form action="/writings/<%= writing._id %>/comments" method="POST">
    <div class="form-group">
      <input class="form-control" type="text" name="comment[text]" placeholder="text">
    </div>
    <div class="form-group">
      <input class="form-control" type="text" name="comment[author]" placeholder="author">
    </div>
    <div class="form-group">
      <button class="btn btn-lg btn-primary">Submit!</button>
    </div>
  </form>
  <a href="/writings">Go Back</a>
</div>

<% include ../partials/footer %>
